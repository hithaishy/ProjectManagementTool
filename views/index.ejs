  <!-- Login Modal -->
  
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">

        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin:15px 15px;">
                <span aria-hidden="true">&times;</span>
              </button>

          <div class="panel-heading">
            <div class="font-effect-shadow-multiple heading">SIGN IN !</div>
          </div>
          <hr>

          <% if(JSON.parse(status) == 'login failed'){%>
            <div class="alert alert-danger alert-dismissible" style="margin-top:15px;">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong>Sign in Failed!</strong> Please try again.
            </div>
            <% } %>

              <form name="loginForm" class="form-signin" role="form" action="/login" method="post">

                <md-input-container class="md-block">
                  <label>Email Address</label>
                  <input required name="username" ng-model="user.username" minlength="4" maxlength="100" ng-pattern="/^.+@.+\..+$/">

                  <div ng-messages="loginForm.username.$error" role="alert">
                    <div ng-message-exp="['pattern']">
                      It doesn't look like an e-mail address.
                    </div>
                  </div>
                </md-input-container>

                <md-input-container class="md-block" flex-gt-sm>
                  <label>Password</label>
                  <input name="password" type="password" name="password" minlength="4" ng-model="user.password" required />

                  <div ng-messages="loginForm.password.$error" role="alert">
                    <div ng-message-exp="['minlength']">
                      Password is required
                    </div>
                  </div>
                </md-input-container>

                <div class="submitButton">
                  <button type="submit" class="btn btn-success loginButton" ng-disabled="!(!!user.username && !!user.password)">Login</button>
                </div>
                <!-- <%=status %> -->


              </form>
        </div>

      </div>
    </div>
  </div>

  <!-- Register Modal -->

  <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">

        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin:15px 15px;">
                  <span aria-hidden="true">&times;</span>
                </button>
          <div class="panel-heading">
